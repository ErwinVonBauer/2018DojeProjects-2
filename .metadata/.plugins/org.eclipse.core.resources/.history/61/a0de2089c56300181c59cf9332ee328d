<script src="http://code.jquery.com/jquery-latest.min.js"></script>
<script>
	var docs = new Array();
	var docai = 0; 
	var lineai = 0;
	var userai = 0;
	var doccount = $("#doccount").val();
	
	function gowritedoc(){
		window.location.href = "writedoc";
	}

	function showdocpreview(pk){
		docai = pk;
		$.ajax({
			url: "/loadpreview.ajax?ai="+docai,
			type: "get",
			contentType : "application/x-www-form-urlencoded; charset=UTF-8",
			async: false,
			success:function(data){
				$("#docpreview").empty();
				$("#docpreview").append(data);
			}
		});
	}
	
	function showlinepreview(pk){
		lineai = pk;
		$.ajax({
			url: "/loadlinepreview.ajax?ai="+lineai,
			type: "get",
			contentType : "application/x-www-form-urlencoded; charset=UTF-8",
			async: false,
			success:function(data){
				$("#linepreview").empty();
				$("#linepreview").append(data);
			}
		});
	}
	
	function showuserpreview(pk,title){
		userai = pk;
		var username = title;
		$.ajax({
			url: "/loaduserpreview.ajax?ai="+userai,
			type: "get",
			contentType : "application/x-www-form-urlencoded; charset=UTF-8",
			async: false,
			success:function(data){
				var userinfos = username+","+data;
				$("#userpreview").empty();
				$("#userpreview").append(userinfos);
			}
		});
	}
	
	function linkchangedoc(){
		$('#draft_ai').val(docai);
		$()
		if(docai!=0){
		$('#frm').submit();
		}else{
			alert("선택된 문서가 없습니다!");
		}
	}
	
	function sendapproval(){
		$('#draft_ai').val(docai);
		$('#apl_ai').val(lineai);
		$('#user_ai').val(userai);
		$('#aprovfrm').submit();
	}
	
</script>
</html>