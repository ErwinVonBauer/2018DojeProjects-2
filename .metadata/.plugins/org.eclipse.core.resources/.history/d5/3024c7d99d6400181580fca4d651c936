			<table class="aprovtlist">
    			<thead>
    			<tr>
     			<th>결재명</th>
        		<th>생성일자</th>
        		<th>결재여부</th>
        		</thead>
        		<tbody id="resultlist">
        		<!-- 검색결과가 뿌려진다 -->
        		</tbody>
        	</table>
